@model MyApp.Models.Question

@{
    ViewData["Title"] = "Видалити питання";
}

<h2>Видалення питання</h2>

<h3 class="text-danger">Ви впевнені, що хочете видалити питання?</h3>

<div>
    <h4>Питання</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Текст питання</dt>
        <dd class="col-sm-10">@Model.Text</dd>
        <dt class="col-sm-2">Категорія</dt>
        <dd class="col-sm-10">@Model.Category</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="button-group">
    <button type="submit" class="btn btn-danger">Видалити</button>
        <button type="button" class="btn btn-secondary" onclick="cancelDelete()">Скасувати</button>
    </div>
</form>

<script>
    function cancelDelete() {
        event.preventDefault();
        window.location.href = '@Url.Action("Search", "Admin")';
    }
</script>

<style>
    .button-group {
        display: flex;
        gap: 10px;
    }
</style>
