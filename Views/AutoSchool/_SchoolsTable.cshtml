@model List<MyApp.Models.AutoSchool>

@if (Model.Count == 0)
{
    <p class="text-danger">Не було знайдено автошкіл за обраними параметрами</p>
}
else
{
    <h3>Знайдено @Model.Count автошкіл:</h3>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Назва</th>
                <th>ЄДРПОУ</th>
                <th>Категорії</th>
                <th>Адреса</th>
                <th>Адреса класів</th>
                <th>Контакти</th>
                <th>Термін акредитації</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var school in Model)
            {
                <tr>
                    <td>@school.Name</td>
                    <td>@school.EDRPOU</td>
                    <td>@school.Categories</td>
                    <td>@school.Address</td>
                    <td>@school.ClassroomsAddress</td>
                    <td>@school.Contacts</td>
                    <td>@school.AccreditationTerm</td>
                </tr>
            }
        </tbody>
    </table>
}